{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "test/**/*"
  ],
  "compilerOptions": {
    "outDir": "./lib",
    "jsx": "react",
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        // other typescript-plugin-styled-components options can be added here
        "minify": true,
        "ssr": true
      }
    ],
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "es2016",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "lib": [
      "dom",
      "es2016"
    ],
    "moduleResolution": "node",
    "sourceMap": true
  }
}